#include <iostream>
using namespace std;

int main() {
    // Step 1: Declare and initialize the array
    double sales[] = {12.25, 32.50, 16.90, 23.00, 45.68};
    int size = 5;
    double sum = 0, average = 0;

    cout << "Sales values: ";
    for (int i = 0; i < size; i++) {
        cout << sales[i] << " ";
        sum += sales[i];
    }

    average = sum / size;
    cout << "\nAverage sales: " << average << endl;

    return 0;
}
