#include <iostream>
using namespace std;

int main() {
    int x = 0;

    cout << "Numbers from 0 to 10:" << endl;
    while (x <= 10) {
        cout << x << " ";
        x++;
    }
    cout << endl;

    int y = 10;
    cout << "Numbers from 10 to 0:" << endl;
    while (y >= 0) {
        cout << y << " ";
        y--;
    }
    cout << endl;

    return 0;
}
